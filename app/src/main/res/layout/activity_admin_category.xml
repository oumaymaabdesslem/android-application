<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AdminCategoryActivity">

    <TextView
        android:id="@+id/category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="Add New Product"
        android:layout_marginTop="27dp"
        android:textAlignment="center"
        android:textSize="26sp"
        android:textStyle="bold"/>

    <LinearLayout
        android:id="@+id/linear_category_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/category"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/t_shirts"
            android:layout_width="59dp"
            android:layout_height="70dp"
            android:src="@drawable/tshirts" />

        <ImageView
            android:id="@+id/sport_t_shirts"
            android:layout_width="wrap_content"
            android:layout_height="82dp"
            android:src="@drawable/sports" />

        <ImageView
            android:id="@+id/female_dresses"
            android:layout_width="84dp"
            android:layout_height="82dp"
            android:src="@drawable/female_dresses" />

        <ImageView
            android:id="@+id/sweather"
            android:layout_width="81dp"
            android:layout_height="79dp"
            android:src="@drawable/sweather" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear2_category_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/linear_category_layout">

        <ImageView
            android:id="@+id/glasses"
            android:layout_width="71dp"
            android:layout_height="61dp"
            android:src="@drawable/glasses" />
        <ImageView
            android:id="@+id/purses_bags"
            android:src="@drawable/purses_bags"
            android:layout_width="90dp"
            android:layout_height="80dp"/>

        <ImageView
            android:id="@+id/hats"
            android:layout_width="73dp"
            android:layout_height="match_parent"
            android:src="@drawable/hats" />

        <ImageView
            android:id="@+id/shoes"
            android:layout_width="70dp"
            android:layout_height="80dp"
            android:src="@drawable/shoess"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp" />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/linear3_category_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/linear2_category_layout">

        <ImageView
            android:id="@+id/headphoness"
            android:layout_width="70dp"
            android:layout_height="80dp"
            android:src="@drawable/headphoness" />

        <ImageView
            android:id="@+id/laptops"
            android:layout_width="69dp"
            android:layout_height="wrap_content"
            android:src="@drawable/laptops" />

        <ImageView
            android:id="@+id/watches"
            android:layout_width="72dp"
            android:layout_height="80dp"
            android:src="@drawable/watches" />

        <ImageView
            android:id="@+id/mobiles"
            android:layout_width="70dp"
            android:layout_height="80dp"
            android:src="@drawable/mobiles"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            />

    </LinearLayout>



</RelativeLayout>